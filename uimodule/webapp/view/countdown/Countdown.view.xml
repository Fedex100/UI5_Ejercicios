 <mvc:View controllerName="com.te.teProjects.controller.countdown.Countdown"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid"
  xmlns:core="sap.ui.core"
  >
  <Page id = "tiles" showHeader="false">
     
	
    <grid:CSSGrid
			id="grid1"
			gridTemplateColumns="1fr"
			gridGap="1rem">
        <Title text="Proyecto 1. Cuenta regresiva al invierno 2022"/>
        <Image src="https://cdn.forbes.com.mx/2020/12/solsticio-de-invierno-tierra-sol-1-640x360.jpg"/>
      	

      	

    <grid:CSSGrid 
        id="grid2"
        gridTemplateColumns="1fr 1fr 1fr 1fr"
        gridGap="1rem">
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Dias" press="press">
		    <TileContent >
			    <NumericContent id="daysId" value="{timer>/days}" valueColor="Good" withMargin="false" />
		    </TileContent>
	    </GenericTile>

        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Horas" press="press">
            <TileContent >
                <NumericContent id="hoursId" value="{timer>/hours}" valueColor="Good" withMargin="false" />
            </TileContent>
        </GenericTile>
        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Minutos" press="press">
		    <TileContent >
			    <NumericContent id="minutesId" value="{timer>/minutes}"  valueColor="Good" withMargin="false" />
		    </TileContent>
	    </GenericTile>

        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Segundos" press="press">
            <TileContent >
                <NumericContent id="secondsId" value="{timer>/seconds}" valueColor="Neutral" withMargin="false" />
            </TileContent>
        </GenericTile>
       

        </grid:CSSGrid>
	</grid:CSSGrid>
  </Page>

</mvc:View>