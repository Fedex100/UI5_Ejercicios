<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    
<Dialog
      id="cargaDatos"
      title="{i18n>titleDialog}"
      stretch="true"
>
    <VBox>
    
      <Text text="{oModel1>/recipient/namCard}"/>
      <Text text="{oModel1>/recipient/numCard}"/>
      <Text text="{oModel1>/recipient/secCode}"/>
      <Text text="{oModel1>/recipient/expDate}"/>
      <Text text="{path:'oModel1>/recipient/datePicker', formatter:'.Formatter.formatDate'}"/>
      <Text text="{oModel2>/recipient/addr}"/>
      <Text text="{oModel2>/recipient/city}"/>
      <Text text="{oModel2>/recipient/zipCod}"/>
      <Text text="{oModel2>/recipient/country}"/>
      <Text text="{oModel1>/recipient/note}"/>
    
    </VBox> 
    
    <beginButton>
        <Button
            text="Cerrar"
            press=".onCloseDialog"/>
      </beginButton>
    
    </Dialog>
</core:FragmentDefinition>
