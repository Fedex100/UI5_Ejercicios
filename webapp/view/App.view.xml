<mvc:View
    controllerName="ejer13.ejer13.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <Panel headerText="{i18n>appDescription}">
                        
                        <Button
								id="helloDialogButton"
                                text="{i18n>btnText}"
                                press=".onDialog"
								/>

                        </Panel>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
